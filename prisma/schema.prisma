generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  userId               String         @id @default(uuid())
  firstName            String
  lastName             String
  email                String         @unique
  password             String
  phone                String?
  organizations        Organisation[] @relation("members")
  createdOrganizations Organisation[] @relation("creator") // Relation for organizations created by the user
  createdAt            DateTime       @default(now())
}

model Organisation {
  orgId       String   @id @default(uuid())
  name        String
  description String?
  members     User[]   @relation("members")
  creator     User     @relation("creator", fields: [creatorId], references: [userId])
  creatorId   String
  createdAt   DateTime @default(now())
}
